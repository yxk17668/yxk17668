if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  clearfix()
  @extend $base-style
  line-height: line-height
  word-wrap: normal
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    word-wrap: normal
    float: left
    border: 1px solid
    -webkit-border-radius: 3px
    border-radius: 3px
    margin-bottom: 5px
    padding: 0px 10px